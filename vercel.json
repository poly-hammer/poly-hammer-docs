{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "site"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/site/$1"
      }
    ],
    "buildCommand": "pip install -r requirements.txt && mkdocs build"

  }
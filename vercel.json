{
    "version": 2,
    "builds": [
      {
        "src": "mkdocs.yml",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "site"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/site/$1"
      }
    ],
    "buildCommand": "pip3 install -r requirements.txt && mkdocs build"
  }
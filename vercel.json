{
    "version": 2,
    "builds": [
    {
      "src": "mkdocs.yml",
      "use": "@vercel/python"
    },
    {
      "src": "site/**/*",
      "use": "@vercel/static"
    }
  ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/site/$1"
      }
    ],
    "buildCommand": "pip install -r requirements.txt && mkdocs build",
    "outputDirectory": "site"
  }